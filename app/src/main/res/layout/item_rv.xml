    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_leave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_7sdp"
        app:cardBackgroundColor="@color/light_black"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rv_preview_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:riv_corner_radius_top_left="@dimen/_10sdp"
                app:riv_corner_radius_top_right="@dimen/_10sdp"
                android:visibility="gone"
                />



                <TextView
                    android:id="@+id/rvTittleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    tools:text="@string/my_notes_tittle_bar" />




            <TextView
                android:id="@+id/rvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/anaheim"
                android:inputType="datetime"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:textStyle="italic"
                tools:text="25/12/2020 :12:31:11" />

            <TextView
                android:id="@+id/rvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                tools:text="@string/my_notes_tittle_bar" />

            <TextView
                android:id="@+id/rvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anaheim"
                android:inputType="textLongMessage|textMultiLine"
                android:paddingLeft="20dp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                tools:text="@string/my_notes_tittle_bar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


<!--        </LinearLayout>-->
</LinearLayout>